<SigninWindow>:
    id: signin_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgb: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        pos_hint: {'top': 1}
        size_hint_y: None
        height: 50
        canvas:
            Color:
                rgb: 0, 0.5, 0.2
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Access Control'
            bold: True
            size_hint_x: 0.9

    BoxLayout:
        orientation: 'vertical'
        padding: signin_win.space_x, 300

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint : (1, 0.2)
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: username_field
                hint_text: 'Username'
                size_hint: (1, None)
                height: 30
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            TextInput:
                id: pwd_field
                hint_text: 'Password'
                size_hint: (1, None)
                height: 30
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id:sp
            size_hint_y: None
            height: 20

        Button:
            text: 'Sign In'
            size_hint_y: None
            height: 40
            background_color: (0, 0.5, 0.2)
            background_normal: ''
            on_release: root.validate_user()

        Label:
            id: sp2